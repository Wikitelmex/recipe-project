<div class="d-flex  flex-column align-items-center">
<section >
<%= form_with model: @food, url: foods_path do |form| %>

  <%= form.label :name %><br>
  <%= form.text_field :name %><br>
  <%= form.label :measurement_unit %><br>
  <%= form.text_field :measurement_unit %><br>
  <%= form.label :price %><br>
  <%= form.number_field :price, step: 0.01 %><br>
  <div class=" mt-3">
  <%= form.submit "Add Food" %>
  </div>
<% end %>
</section>
</div>