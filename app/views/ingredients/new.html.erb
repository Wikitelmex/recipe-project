<%= form_with model: RecipeFood.new, url: recipe_ingredient_create_path do |form| %>
  <%= form.label :food_id %><br>
  <%= form.select :food_id, options_for_select(@ingredients) %><br>
  <%= form.label :quantity %>(minutes)<br>
  <%= form.number_field :quantity, step: 0.1 %><br>
  <div class="mt-3">
    <%= form.submit "Add Ingredient" %>
  </div>
<% end %>