<h1 class="text-center">Shopping List</h1>
<div class="m-auto col-8"">
  <h4><%= link_to "← Back", recipe_path, class: "link-primary ms-2" %></h4>
  <div>
    <div><strong>Amount of food items to buy: </strong> <%= @ingredients_count %></div>
    <div><strong>Total value of food needed: </strong> $<%= @ingredients_total %></div>
  </div>
  <div>
    <table class="table table-striped table-bordered table-sm" id="dtBasicExample">
      <thead>
        <tr>
          <th class="th-sm col-4">Food</th>
          <th class="th-sm col-3">Quantity</th>
          <th class="th-sm col-3">Price</th>
        </tr>
      </thead>
      <tbody>
        <% @recipe_ingredients.each do |ingredient| %>
          <tr>
            <td><%= ingredient.food.name %></td>
            <td><%= ingredient.quantity %></td>
            <td><%= ingredient.food.price %></td>
          </tr>
        <%end%>
      </tbody>
    </table><br><br><br>
  </div>
</div>

<script>
  $(document).ready($('#dtBasicExample').DataTable());
</script>
