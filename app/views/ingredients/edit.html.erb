<%= form_with model: @recipe_food, url: recipe_ingredient_update_path, method: :patch do |form| %>
  <%= form.label :id %> User<br>
  <%= form.number_field :id, disabled: true %><br>
  <%= form.label :recipe_id %><br>
  <%= form.number_field :recipe_id, disabled: true %><br>
  <%= form.label :food_id %><br>
  <%= form.select :food_id, options_for_select(@ingredients) %><br>
  <%= form.label :quantity %><br>
  <%= form.number_field :quantity, step: 0.1 %><br>
  <div class="mt-3">
    <%= form.submit "Update Ingredient" %>
  </div>
<% end %>